{
  "$schema": "https://json-schema.org/draft-06/schema",
  "type": "object",
  "properties": {
    "prefix": {
      "$ref": "#/$defs/EnvString"
    },
    "caching": {
      "type": "object",
      "properties": {
        "type": {
          "default": "memory",
          "oneOf": [
            {
              "type": "string",
              "enum": ["memory", "persistent"]
            },
            {
              "$ref": "#/$defs/Env"
            }
          ]
        },
        "path": {
          "default": "__caching",
          "$ref": "#/$defs/EnvString"
        },
        "ttl": {
          "$ref": "#/$defs/EnvNumber"
        }
      },
      "required": ["type"]
    },
    "openapi": {
      "oneOf": [
        { "$ref": "#/$defs/EnvBoolean" },
        {
          "type": "object",
          "properties": {
            "path": {
              "default": "/help",
              "$ref": "#/$defs/EnvString"
            },
            "title": {
              "default": "Api BFF",
              "$ref": "#/$defs/EnvString"
            },
            "version": {
              "default": "1",
              "anyOf": [
                { "$ref": "#/$defs/EnvNumber" },
                { "$ref": "#/$defs/EnvString" }
              ]
            },
            "description": {
              "$ref": "#/$defs/EnvString"
            },
            "contact": {
              "type": "object",
              "properties": {
                "url": {
                  "$ref": "#/$defs/EnvString"
                },
                "name": {
                  "$ref": "#/$defs/EnvString"
                },
                "email": {
                  "$ref": "#/$defs/EnvString"
                }
              }
            },
            "termsOfService": {
              "$ref": "#/$defs/EnvString"
            },
            "license": {
              "type": "object",
              "properties": {
                "name": {
                  "$ref": "#/$defs/EnvString"
                },
                "url": {
                  "$ref": "#/$defs/EnvString"
                }
              },
              "required": ["name"]
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "$ref": "#/$defs/EnvString"
                  },
                  "description": {
                    "$ref": "#/$defs/EnvString"
                  },
                  "externalDocs": {
                    "$ref": "#/$defs/OpenapiExternalDocs"
                  }
                }
              }
            },
            "externalDocs": {
              "$ref": "#/$defs/OpenapiExternalDocs"
            },
            "security": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": {
                  "$ref": "#/$defs/EnvString"
                }
              }
            }
          }
        }
      ]
    },
    "httpClient": {
      "default": "got",
      "type": "string",
      "enum": ["got", "axios"]
    }
  },
  "$defs": {
    "OpenapiExternalDocs": {
      "type": "object",
      "properties": {
        "url": {
          "$ref": "#/$defs/EnvString"
        },
        "description": {
          "$ref": "#/$defs/EnvString"
        }
      },
      "required": ["url"]
    },
    "Env": {
      "type": "string",
      "pattern": "^ENV\\..+"
    },
    "EnvString": {
      "anyOf": [
        {
          "$ref": "#/$defs/Env"
        },
        {
          "type": "string"
        }
      ]
    },
    "EnvNumber": {
      "oneOf": [
        {
          "$ref": "#/$defs/Env"
        },
        {
          "type": "number"
        }
      ]
    },
    "EnvBoolean": {
      "oneOf": [
        {
          "$ref": "#/$defs/Env"
        },
        {
          "type": "boolean"
        }
      ]
    }
  }
}
