{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "target": "ES2020",
    "module": "commonjs",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "typeRoots": ["node_modules/@types", "src/types/global.d.ts"]
  }
}
